{
  "manifest_version": 3,
  "name": "Bookmark Sorter",
  "version": "1.0",
  "description": "This Chrome extension automatically organizes your bookmarks.",
  "permissions": ["bookmarks", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Bookmark Sorter"
  },
  "icons": {
    "512": "icons/star.png"
  }
}
